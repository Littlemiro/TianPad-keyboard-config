/* my_pad.overlay */
#include <dt-bindings/zmk/matrix_transform.h> 

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zmk,underglow = &led_strip;
    }; 

    /* 
     * 矩阵变换配置 
     * 这里定义了物理按键在逻辑矩阵中的位置
     * 对应 4行 x 5列 的布局 (包含两个旋钮的按压功能)
     */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;
        map = <
            RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4)  /* 第1行: 键1-4 + 左旋钮按压 */
            RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4)  /* 第2行: 键5-8 + 右旋钮按压 */
            RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3)           /* 第3行: 键9-12 */
            RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3)           /* 第4行: 键13-16 */
        >;
    };

    /* 
     * 键盘扫描配置 (KSCAN)
     * 定义了哪些引脚是列(Col)，哪些是行(Row)
     */
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row"; 
        
        /* 列引脚配置 */
        col-gpios
            = <&pro_micro 8 GPIO_ACTIVE_HIGH>  /* Col 0: D8 */
            , <&pro_micro 9 GPIO_ACTIVE_HIGH>  /* Col 1: D9 */
            , <&gpio0 9  GPIO_ACTIVE_HIGH>     /* Col 2: P0.09 (D10) */
            , <&gpio0 10 GPIO_ACTIVE_HIGH>     /* Col 3: P0.10 (D16) */
            , <&pro_micro 20 GPIO_ACTIVE_HIGH> /* Col 4: A2 */
            ; 

        /* 行引脚配置 */
        row-gpios
            = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* Row 0: D4 */
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* Row 1: D5 */
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* Row 2: D6 */
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* Row 3: D7 */
            ;
    };

    /* 左旋钮 (旋转功能) */
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";
        a-gpios = <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; /* D14 */
        b-gpios = <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; /* D15 */
        steps = <80>;
        status = "okay";
    };

    /* 右旋钮 (旋转功能) */
    right_encoder: encoder_right {
        compatible = "alps,ec11";
        label = "RIGHT_ENCODER";
        a-gpios = <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; /* A0 */
        b-gpios = <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; /* A1 */
        steps = <80>;
        status = "okay";
    }; 
    
    /* 激活旋钮传感器 */
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
}; 

/* 
 * RGB 灯光配置 (WS2812)
 * 使用 SPI 协议控制
 */
&spi1 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    mosi-pin = <8>; /* P0.08 (对应 nice!nano 的 D0/TX 引脚) */
    // 这里的 sck 和 miso 是未使用的伪定义，为了满足SPI协议格式
    sck-pin = <25>; 
    miso-pin = <26>; 

    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";
        label = "WS2812";
        spi-max-frequency = <4000000>;
        reg = <0>;
        spi-one-frame = <0x70>;
        spi-zero-frame = <0x40>;
        chain-length = <10>; /* 灯珠数量: 10颗 */
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };
};